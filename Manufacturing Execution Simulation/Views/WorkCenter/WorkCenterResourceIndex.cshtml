@model IEnumerable<Manufacturing_Execution_Simulation.Models.ME_WORKCENTER_RESOURCE>

<table class="table" style="border-collapse:collapse; empty-cells:show;text-align:left">
    <tr>
        
        <th style="border-bottom:1px;
                    border-bottom-color:black;
                    border-bottom-style:solid;"></th>        
        <th style="border-bottom:1px;
                    border-bottom-color:black;
                    border-bottom-style:solid;">
            @Html.DisplayNameFor(model => model.ME_RESOURCE.NAME)
        </th>
        <th style="border-bottom:1px;
                    border-bottom-color:black;
                    border-bottom-style:solid;">
            Actions
        </th>
    </tr>

    @if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td></td> 
                <td>
                    @Html.DisplayFor(modelItem => item.ME_RESOURCE.NAME)
                </td>
                <td>
                    <a href='@Url.Action("Edit", "WorkCenterResource", new { id = item.ID })' class="leftMargin" title="Edit">
                        <img src="~/Content/Images/edit.jpg" />
                    </a> |
                    <a href='@Url.Action("Details", "WorkCenterResource", new { id = item.ID })' class="leftMargin" title="Details">
                        <img src="~/Content/Images/info.jpg" />
                    </a> |
                    <a href='@Url.Action("Delete", "WorkCenterResource", new { id = item.ID })' class="leftMargin" title="Delete">
                        <img src="~/Content/Images/delete.jpg" />
                    </a>
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td></td>
            <td>
                No Resource is assigned to the WorkCenter !
            </td>
        </tr>
    }

</table>
