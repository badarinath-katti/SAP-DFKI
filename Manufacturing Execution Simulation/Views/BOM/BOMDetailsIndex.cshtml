@model IEnumerable<Manufacturing_Execution_Simulation.Models.ME_BOM_DETAILS>

<table class="table" style="border-collapse:collapse; empty-cells:show;text-align:left">
    <tr >
        <th style="border-bottom:1px;
                    border-bottom-color:black;
                    border-bottom-style:solid;"></th>
        <th style="border-bottom:1px;
                    border-bottom-color:black;
                    border-bottom-style:solid;">
            @Html.DisplayNameFor(model => model.SEQUENCE)
        </th>
        
        <th  style="border-bottom:1px;
                    border-bottom-color:black;
                    border-bottom-style:solid;">
            @Html.DisplayNameFor(model => model.BOM)
        </th>
        <th style="border-bottom:1px;
                    border-bottom-color:black;
                    border-bottom-style:solid;">
            @Html.DisplayNameFor(model => model.COMPONENT)
        </th>
        <th style="border-bottom:1px;
                    border-bottom-color:black;
                    border-bottom-style:solid;">
            @Html.DisplayNameFor(model => model.OPERATION)
        </th>
        <th style="border-bottom:1px;
                    border-bottom-color:black;
                    border-bottom-style:solid;">
            @Html.DisplayNameFor(model => model.ASSEMBLY_QUANTITY)
        </th>
        <th style="border-bottom:1px;
                    border-bottom-color:black;
                    border-bottom-style:solid;">
            Actions
        </th>
    </tr>
@if (Model.Count() > 0)
{
    foreach (var item in Model)
    {
        <tr>
            <td></td>
            <td>
                @Html.DisplayFor(modelItem => item.SEQUENCE)
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.ME_BOM.NAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ME_MATERIAL.NAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ME_OPERATION.NAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ASSEMBLY_QUANTITY)
            </td>
            <td>
                <a href='@Url.Action("Edit", "BOMDetails", new { id = item.ID })' class="leftMargin" title="Edit">
                    <img src="~/Content/Images/edit.jpg" />
                </a> | 
                <a href='@Url.Action("Details", "BOMDetails", new { id = item.ID })' class="leftMargin" title="Details">
                    <img src="~/Content/Images/info.jpg" />
                </a> |
                <a href='@Url.Action("Delete", "BOMDetails", new { id = item.ID })' class="leftMargin" title="Delete">
                    <img src="~/Content/Images/delete.jpg" />
                </a>
            </td>
        </tr>
    }
}
else
{
    <tr>
        <td></td>
        <td>
            No details have been added to the BOM !
        </td>
    </tr>
}

</table>
