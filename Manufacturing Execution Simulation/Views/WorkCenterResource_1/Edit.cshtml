@model Manufacturing_Execution_Simulation.Models.ME_WORKCENTER_RESOURCE

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="leftMargin">Work Center - Resource Assignment</h4>
<hr />
<h5 class="leftMargin">Edit assignment</h5>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.WORKCENTER_ID)

        <div class="form-group">
            @Html.LabelFor(model => model.RESOURCE_ID, "RESOURCE", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("RESOURCE_ID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.RESOURCE_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div class = "leftMargin bottomMargin">
    @Html.ActionLink("Back to List", "Index")
</div>
