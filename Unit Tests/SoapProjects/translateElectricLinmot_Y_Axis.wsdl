		</wsdl:operation>
		
		<wsdl:operation name="readActualPosition">
			<wsdl:input message="tns:readActualPositionRequestMessage" />
			<wsdl:output message="tns:readActualPositionResponseMessage" />
		</wsdl:operation>
		
	</wsdl:portType>


