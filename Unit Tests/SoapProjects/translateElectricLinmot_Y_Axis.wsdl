<?xml version="1.0" encoding="UTF-8"?>

<wsdl:definitions
	targetNamespace="http://www.smartfactory.de/rescom/translateElectricLinmot"
	xmlns:tns="http://www.smartfactory.de/rescom/translateElectricLinmot"
